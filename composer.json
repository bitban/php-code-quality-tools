{
  "name": "bitban/php-code-quality-tools",
  "description": "PHP Code Quality Tools used in Bitban projects.",
  "license": "MIT",
  "keywords": [
    "git",
    "hook",
    "quality"
  ],
  "authors": [
    {
      "name": "Fede √Ålvarez",
      "email": "falvarez@bitban.com"
    }
  ],
  "type": "library",
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Bitban\\PhpCodeQualityTools\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": { "Bitban\\PhpCodeQualityTools\\Tests\\": "tests/" }
  },
  "require": {
    "composer/composer": "^1.1",
    "symfony/process": "^2.8||^3.1|^4.1",
    "squizlabs/php_codesniffer": "^2.6"
  },
  "require-dev": {
    "mikey179/vfsstream": "^1.6",
    "php-coveralls/php-coveralls": "^2.1",
    "phpunit/phpunit": "^7.3"
  },
  "config": {
    "bin-dir": "bin/",
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    }
  },
  "bin": [
    "bin/php-cqtools"
  ]
}
