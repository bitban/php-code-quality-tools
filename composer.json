{
  "name": "bitban/php-code-quality-tools",
  "description": "PHP Code Quality Tools used in Bitban projects.",
  "license": "MIT",
  "keywords": [
    "git",
    "hook",
    "quality"
  ],
  "authors": [
    {
      "name": "Fede √Ålvarez",
      "email": "falvarez@bitban.com"
    }
  ],
  "type": "library",
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Bitban\\PhpCodeQualityTools\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": { "Bitban\\PhpCodeQualityTools\\Tests\\": "tests/" }
  },
  "require": {
    "composer/composer": "^1.1",
    "symfony/process": "^3.1",
    "squizlabs/php_codesniffer": "^2.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.4",
    "satooshi/php-coveralls": "^1.0"
  },
  "config": {
    "bin-dir": "bin/"
  },
  "bin": [
    "bin/php-cqtools"
  ],
  "scripts": {
    "post-install-cmd": [
      "Bitban\\PhpCodeQualityTools\\Composer\\ScriptHandler::checkSniffs",
      "Bitban\\PhpCodeQualityTools\\Composer\\ScriptHandler::checkHooks"
    ],
    "post-update-cmd": [
      "Bitban\\PhpCodeQualityTools\\Composer\\ScriptHandler::checkSniffs",
      "Bitban\\PhpCodeQualityTools\\Composer\\ScriptHandler::checkHooks"
    ]
  }
}
